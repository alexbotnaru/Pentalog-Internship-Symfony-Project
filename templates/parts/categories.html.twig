<h5 class="title black">Category</h5>
<ul class="list-group">
    {% for category in productRepo.getCategories() %}
        <li class="list-unstyled">
            {% if "/admin/" in app.request.requestUri  %}
            <a class="nav-link black"
               href="{{ path('adminpr', {category: category}) }}">{{ category }}</a>
            {% else %}
            <a class="nav-link black"
               href="{{ path('product_index', {category: category}) }}">{{ category }}</a>
            {% endif %}
        </li>
    {% endfor %}
</ul>