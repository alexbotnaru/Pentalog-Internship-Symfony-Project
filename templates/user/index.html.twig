{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>
    <a class="btn btn-sm btn-primary" href="{{ path('user_new') }}">Create new</a>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        {{ role | replace ({'ROLE_' : ' '}) }}
                    {% endfor %}
                </td>

                <td>
                    <div class="row ">
                    <a class="btn btn-sm btn-warning ml-2" href="{{ path('user_show', {'id': user.id}) }}" >Show</a>
                    <a class="btn btn-sm btn-success ml-2 mr-2" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
                    {{ include('user/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
